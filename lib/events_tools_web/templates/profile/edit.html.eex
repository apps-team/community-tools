<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="admin edit-block">

    <%= if @profile.user_id == @current_user.id do %>

    <h2>Edit Profile</h2>

    <%= render "form.html", changeset: @changeset, profile: @profile, status_all: @status_all, current_user: @current_user,
                            action: profile_path(@conn, :update, @profile) %>

  <%= end %>

  </div>
</div>
